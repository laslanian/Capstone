                </div>
                <div class="col-md-8" id="uislider"></div>
                @Html.ValidationMessageFor(model => model.UIDesign, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.ActionLink("Cancel", "Index", "Students", null, new { @class = "btn btn-default", @href = Request.UrlReferrer })
            <input type="submit" name="button" value="Submit" class="btn btn-info" />
        </div>
    </div>
}
