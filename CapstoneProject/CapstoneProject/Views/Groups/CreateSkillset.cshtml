                    @Html.TextBoxFor(model => model.Database, new { @readonly = "readonly", @class = "form-control", @style = "width: 42px;" })
                </div>
                <div class="col-md-8" id="dbslider"></div>
                @Html.ValidationMessageFor(model => model.Database, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.WebDev, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.WebDev, new { @readonly = "readonly", @class = "form-control", @style = "width: 42px;" })
                </div>
                <div class="col-md-8" id="webslider"></div>
                @Html.ValidationMessageFor(model => model.WebDev, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.MobileDev, htmlAttributes: new { @class = "control-label col-md-2" })
