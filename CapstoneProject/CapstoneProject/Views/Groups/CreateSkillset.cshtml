                    @Html.TextBoxFor(model => model.MobileDev, new { @readonly = "readonly", @class = "form-control", @style = "width: 42px;" })
                </div>
                <div class="col-md-8" id="mobslider"></div>
                @Html.ValidationMessageFor(model => model.MobileDev, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ApplDev, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.ApplDev, new { @readonly = "readonly", @class = "form-control", @style = "width: 42px;" })
                </div>
                <div class="col-md-8" id="appslider"></div>
                @Html.ValidationMessageFor(model => model.ApplDev, "", new { @class = "text-danger" })
