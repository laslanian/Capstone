@model IEnumerable<CapstoneProject.Group>

@{
    ViewBag.Title = "Index";
}

<h2>Groups</h2>

<p>
    @Html.ActionLink("Create Group", "CreateGroup")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            Members
        </th>
        <th>

        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @item.Students.Count() / 5
        </td>
        @{if (item.Students.Count() < 5)
            {
                <td>
                    @Html.ActionLink("Join", "JoinGroup", new { id = item.GroupId }, new { @class = "btn btn-default" })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Join", "JoinGroup", new { id = item.GroupId }, new { @class = "btn btn-default", disabled = "disabled", @readonly = "readonly" })
                </td>
            }
        }
    </tr>
}

</table>
