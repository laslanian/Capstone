@model CapstoneProject.Group
@{
    ViewBag.Title = "Join Group";
}
<h2>Join Group Application</h2>
<h4>Please enter the pin below that was sent to @Html.DisplayFor(model => model.GroupName)'s leader to join the group.</h4>
<hr class="colorgraph" />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GroupId)
        <table class="table">
            <tr>
                <td>
                    <strong>@Html.DisplayNameFor(model => model.GroupName)</strong>
                </td>
                <td>
                    @Html.DisplayFor(model => model.GroupName)
                </td>
            </tr>
            <tr >
                <td>
                    <strong>@Html.DisplayNameFor(model => model.Pin)</strong>
                </td>
                <td align="center" >
                    @Html.EditorFor(model => model.Pin, new { htmlAttributes = new { @class = "form-control", placeholder = " "} }) <span style="color:red"> @ViewBag.JoinError </span>
                </td>
            </tr>
            <tr><td></td><td></td></tr>
        </table>
        <div class="form-group">
            <div>
                @Html.ActionLink("Cancel", "Index", "Groups", new { @class = "btn btn-danger" })
                <input type="submit" value="Join" class="btn btn-success" />
            </div>
        </div>
    </div>
}
