@model CapstoneProject.Group

@{
    ViewBag.Title = "JoinGroup";
}

<h2>Join Group Form</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GroupId)
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.GroupName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.GroupName)
            </dd>
            </dl>
            <div class="form-group">
                @Html.LabelFor(model => model.Pin, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Pin, new { htmlAttributes = new { @class = "form-control" } }) <span style="color:red"> @ViewBag.JoinError </span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @Html.ActionLink("Cancel", "Index", "Groups", new { @class = "btn btn-default" })
                    <input type="submit" value="Join" class="btn btn-default" />
                </div>
            </div>
</div>
}
