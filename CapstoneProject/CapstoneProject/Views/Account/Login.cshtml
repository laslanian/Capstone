@model CapstoneProject.Models.LoginUser
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src='https://www.google.com/recaptcha/api.js'></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row" style="margin-top:20px">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form">
                    <fieldset>
                        <h2>Please Sign In</h2>
                        <hr class="colorgraph">
                        <h4><span style="color:red;"> @ViewBag.LoginError</span></h4>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control input-lg", placeholder = "Username" })
                            @Html.ValidationMessageFor(u => u.Username)
                        </div>
                        <br />
                        <div class="editor-field">
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control input-lg", placeholder = "***********" })
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <hr class="colorgraph">
                        <div class="g-recaptcha" data-sitekey="6LftbQsUAAAAAF8PawPTpTVC8L8myc2c-zWZDMmA"></div>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <p >
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Log In" />
                                </p>                            
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="~/Account/Register" class="btn btn-lg btn-primary btn-block">Register</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
}