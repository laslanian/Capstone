@model CapstoneProject.Models.LoginUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row" style="margin-top:20px">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form">
                    <fieldset>
                        <h2>Please Sign In</h2>
                        <hr class="colorgraph">
                        <h4><span style="color:red;"> @ViewBag.LoginError</span></h4>
                        <div class="editor-field">
                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control input-lg", placeholder = "Username" })
                            @Html.ValidationMessageFor(u => u.Username)
                        </div>
                        <br />
                        <div class="editor-field">
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control input-lg", placeholder = "***********" })
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <hr class="colorgraph">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <p >
                                    <input class="btn btn-lg btn-success btn-block" type="submit" value="Log In" />
                                </p>                            
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="~/Account/Register" class="btn btn-lg btn-primary btn-block">Register</a>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <a href="#" data-toggle="modal" data-target="#ResetPasswordModal">Forgot Password?</a>
                            </div>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div id="ResetPasswordModal" class="modal fade" role="dialog" tabindex="-1">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Reset Password?</h4>
                </div>
                <div class="modal-body">
                    <p>Would you like to reset your password?</p>
                    <input  id="username" type="text" placeholder="Username" data-val-required="field is required" data-val="true" value="" />
                </div>
                <div class="modal-footer">
                    <button type="button" id="ResetPassword" class="btn btn-primary">Reset Password</button>
                    <button type="button"  class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#ResetPassword').on('click', function (e) {
                var uname = $("#username").val();
                e.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: "/Account/SendResetPassword/",
                    data: {
                        username: uname
                    },
                    success: function () {
                        window.location.href = "/Home/Index"
                    },
                    error: function (e) {
                        alert(e.responseText);
                    }
                });
            });
        });
       

    </script>
}