@model CapstoneProject.Models.StudentUser

@{
    ViewBag.Title = "Student Registration";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form">
                    <h2 class="">Student Registration</h2>
                    <hr class="colorgraph">
                    <div class="row">
                        <h4>&nbsp;&nbsp;&nbsp;Account Details</h4>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control input-lg", placeholder = "First Name" })
                                @Html.ValidationMessageFor(model => model.FirstName)                            
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.LastName, new { @class = "form-control input-lg", placeholder = "Last Name" })
                                @Html.ValidationMessageFor(model => model.LastName)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control input-lg", placeholder = "Phone Number" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control input-lg", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.Email) 
                                <span style="color:red"> @ViewBag.EmailError </span>                           
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.ConfirmEmail, new { @class = "form-control input-lg", placeholder = "Confirm Email" })
                                @Html.ValidationMessageFor(model => model.ConfirmEmail)                         
                            </div>
                        </div>
                    </div>
                    <div class="form-group">

                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control input-lg", placeholder = "Username"})
                        @Html.ValidationMessageFor(model => model.Username)
                        <span style="color:red"> @ViewBag.AuthError </span>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control input-lg", placeholder = "Password" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-6 col-md-6">
                            <div class="form-group">
                                @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control input-lg", placeholder = "Confirm Password" })
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                        </div>
                    </div>
                        <div class="row-fluid">
                                <h4>Student Details</h4>
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    @Html.TextBoxFor(model => model.StudentNumber, new { @class = "form-control input-lg", placeholder = "Student Number", htmlAttributes = new { @type = "numbers" } })
                                    @Html.ValidationMessageFor(model => model.StudentNumber)
                                    <span style="color:red"> @ViewBag.SNError </span>
                                </div>
                            </div>
                                <div class="col-xs-12 col-sm-6 col-md-6">
                                    <div class="form-group">
                                        @Html.DropDownListFor(model => model.ProgramId, new SelectList(Model.ProgList, "ProgramId", "ProgramName"), new { @class = "form-control input-lg" })
                                        @Html.ValidationMessageFor(model => model.ProgramId)
                                    </div>
                                </div>
                            </div>
                    <br />
                    <br />
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-12 col-md-6">
                            @Html.ActionLink("Previous", "TermsAndCondition", "Account", new { @class = "btn btn-primary btn-block btn-lg" })
                        </div>
                        <div class="col-xs-12 col-md-6"><input type="submit" name="button" value="Register" class="btn btn-success btn-block btn-lg" /></div>
                    </div>
                </form>
            </div>
        </div></div>        
        }
