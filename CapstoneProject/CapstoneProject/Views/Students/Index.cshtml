@model CapstoneProject.Student

@{
    ViewBag.Title = "Student Profile";
}

<h2>Profile Page</h2>
<h4>@Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserId }) </h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.StudentNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>
    </dl>

</div>
<hr />
<h4>Skillset</h4>
<div><img src="@Url.Action("CreateChart", "Students", new { id = Model.Skillset.Id })" /></div>
<div>
    @{
        var coopList = Model.Coops.ToList();
    }
    <hr />
    <h4>
        Coop Information
        @{if (coopList.Count() < 2)
            {
                @Html.ActionLink("Add Coop", "AddCoop", "Students", new { @class = "btn btn-default" })
            }
        }
    </h4>
    <hr />
    @{
        if (coopList.Count() == 0)
        {
            <h4>You have no coop in your profile.</h4>
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => coopList[0].CompanyName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => coopList[0].JobTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => coopList[0].StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => coopList[0].EndDate)
                    </th>
                </tr>
                @for (int i = 0; i < coopList.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => coopList[i].CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => coopList[i].JobTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => coopList[i].StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => coopList[i].EndDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditCoop", new { id = coopList[i].CoopId }) |
                            @Html.ActionLink("Details", "CoopDetails", new { id = coopList[i].CoopId }) |
                            @Html.ActionLink("Delete", "DeleteCoop", new { id = coopList[i].CoopId })
                        </td>
                    </tr>
                }
            </table>
        }
    }
    </div>
