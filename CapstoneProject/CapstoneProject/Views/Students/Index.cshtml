@model CapstoneProject.Student

@{
    ViewBag.Title = "Student Profile";
}

<h2>Profile Page
    @Html.ActionLink("Edit Profile", "Edit", new { id = Model.UserId }) </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StudentNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StudentNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Interests)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Interests)
        </dd>

    </dl>

</div>

<div>
    <h4>Coop Information @Html.ActionLink("Add Coop", "AddCoop", "Students", new { id = Model.UserId }, new { @class="btn btn-default" }) </h4>
    <hr />
        @{
            var coopList = Model.Coops.ToList();
        }
        @{ 
            if(coopList.Count() == 0)
            {
                <h4>You have no coop in your profile.</h4>
            }
        }
    <dl class="dl-horizontal">
        @for (int i = 0; i < coopList.Count(); i++)
        {
            <dt>
                @Html.DisplayNameFor(cname => coopList[i].CompanyName);
            </dt>

            <dd>
                @Html.DisplayFor(cname => coopList[i].CompanyName);
            </dd>
            <dt>
                @Html.DisplayNameFor(cname => coopList[i].EndDate);
            </dt>

            <dd>
                @Html.DisplayFor(cname => coopList[i]);
            </dd>
            <dt>
                @Html.DisplayNameFor(cname => coopList[i].CompanyName);
            </dt>

            <dd>
                @Html.DisplayFor(cname => coopList[i].CompanyName);
            </dd>

            <p>
                @Html.ActionLink("Edit", "Edit", new { id = coopList[i].CoopId }) |
            </p>
        }
    </dl>
</div>