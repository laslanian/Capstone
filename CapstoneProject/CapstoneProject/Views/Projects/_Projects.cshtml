@model IEnumerable<CapstoneProject.Project>

@{
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            @{if (Session["UserType"].ToString().Equals("Admin"))
                {

                    <th>
                        @Html.DisplayNameFor(model => model.Client.CompanyName)
                    </th>
                }
            }
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>

        @{ if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        @{if (Session["UserType"].ToString().Equals("Admin"))
                            {

                                <td>
                                    @Html.DisplayFor(modelItem => item.Client.CompanyName)
                                </td>
                            }
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.ActionLink("View Details", "Details", "Projects", new { id = item.ProjectId }, new { @class = "btn btn-info" })
                        </td>
                        @{if (Session["UserType"].ToString().Equals("Admin"))
                            {
                                <td>
                                    <button type="button" id="btnChangeState" class="btn btn-default">Change State</button>
                                </td>
                            } }
                    </tr>
                                }
                            }
        }
    </table>
}

@{ if (Model.Count() < 1)
    {
        <p>There are no projects on this list.</p>
    }
}
<script type="text/javascript">
    $("document").ready(function () {
        $("#btnChangeState").click(function () {

        });
    });
</script>