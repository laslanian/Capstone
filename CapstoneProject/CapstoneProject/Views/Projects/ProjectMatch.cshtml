@model CapstoneProject.Models.ViewModels.ProjectMatchGroup
@{
    ViewBag.Title = "ProjectMatch";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container ">
            <div class="row">
                <div class="col-md-10" height:auto;">
                    <h2>Project Matching</h2>
                </div>
                <div class="col-md-2" height:auto;">
                    <input style="margin-top:15px;" type="submit" name="button" value="Save" class="btn btn-default" />    <span style="color:red"> @ViewBag.SubmitError </span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" height:auto;">
                    <h3>Groups</h3>
                    <div class="panel-group" id="accordion">
                        @{
                            var groupList = Model.Groups;
                            if (groupList.Count() >= 1)
                            {
                                for (int i = 0, len = groupList.Count(); i < len; i++)
                                {
                                    @Html.Partial("_Groups", groupList[i])   
                                }
                            }
                            else
                            {
                                <span style="color:red"> No available groups. </span>
                            }
                        }
                    </div>
                </div>

                <div class="col-md-6" height:auto;">
                    <h3>Projects</h3>
                    <div class="panel-group" id="accordion">
                        @{
                            var projList = Model.Projects;
                            if (projList.Count() >= 1)
                            {
                                for (int i = 0, len = projList.Count(); i < len; i++)
                                {
                                    @Html.Partial("_ProjectDetail", projList[i])
                                }
                            }
                            else
                            {
                                <span style="color:red"> No available projects. </span>
                            }

                        }
                    </div>
                </div>
            </div>
        </div>
  
}
<script type="text/javascript">
    $(document).ready(function() {
        $(".div_projects").accordion({
            header: "> div > h3",
            collapsible: true,
            active: false,
            autoHeight: true,
            autoActivate: true
        });
        $(".div_groups").accordion({
            header: "> div > h3",
            collapsible: true,
            active: false,
            autoHeight: true,
            autoActivate: true
        });
     
    });
</script>



