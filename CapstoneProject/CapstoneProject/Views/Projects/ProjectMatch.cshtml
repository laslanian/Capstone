@model CapstoneProject.Models.ViewModels.ProjectMatchGroup
@{
    ViewBag.Title = "ProjectMatch";
}



@using (Html.BeginForm(new { id = "mainform" }))
{
    @Html.AntiForgeryToken()

<div class="container">
            <div class="row">
                <div class="col-md-6" height:auto;">
                    <h2>Project Match</h2>
                </div>
                <div class="col-md-2" style="height:auto;">
                    <button style="margin-top:15px;" id="btnSave" type="button" class="btn btn-info" data-toggle="modal" data-target="#saveGroup">Save</button>
                    <span style="color:red"> @ViewBag.SubmitError </span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6" height:auto;">
                    <h3>Unassigned Groups</h3>
                    <div class="panel-group itemList" id="accordion">
                       
                        @{
                            var groupList = Model.Groups.ToList();
                            int countGroup = 0;
                            for (int i = 0, len = groupList.Count(); i < len; i++)
                            {
                                if (groupList[i].Projects.Count() != 1)
                                {
                                    @Html.Partial("_Groups", groupList[i])
                                    countGroup++;
                                }
                            }
                            if (countGroup == 0)
                            {
                                <span style="color:red" class="groupListError">All groups have been assigned a project.</span>
                            }
                        }
                    </div>
                </div>

                <div class="col-md-6" height:auto;">
                    <h3>Unassigned Projects</h3>
                    <div class="panel-group projectList" id="accordion">
                       
                        @{
                            var projList = Model.Projects.ToList();
                            int countProj = 0;
                            for (int i = 0, len = projList.Count(); i < len; i++)
                            {
                                if (!projList[i].State.Equals("Assigned"))
                                {
                                    @Html.Partial("_ProjectDetail", projList[i])
                                    countProj++;
                                }
                            }
                            if (countProj == 0)
                            {
                                <span style="color:red" class="groupListError">All projects have been assigned to groups.</span>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
}
<!-- Modal -->
<div id="saveGroup" class="modal fade" role="dialog" tabindex="-1">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Assign Project?</h4>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to project to this group?</p>
            </div>
            <div class="modal-footer">
                <button type="button" id="assignProject" class="btn btn-primary">Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $('#assignProject').on('click', function (e) {
            var gId = $('input[type=radio][name=GroupId]:checked').val(), pId = $('input[type=radio][name=ProjectId]:checked').val();

            $.ajax({
                url: '/Projects/ProjectMatch',
                type: 'POST',
                dataType: 'text',
                data: {
                    groupId: gId,
                    projectId: pId
                },
                success: function (data) {
                    window.location.href = "/Projects/ProjectMatch";
                }
            });
          

        });
    });
</script>