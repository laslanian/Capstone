@model CapstoneProject.Project

@{
    ViewBag.Title = "EditProject";
}

<h2>Edit Project</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProjectId)
    @Html.HiddenFor(model => model.Type)
    @Html.HiddenFor(model => model.State)

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description)
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Criteria.Goal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Criteria.Goal)
                @Html.ValidationMessageFor(model => model.Criteria.Goal)
            </div>
        </div>

        <div class="row">
            <div class="col-md-2"><h4>Criteria</h4></div>
            <div class="col-md-2"><h4>Options</h4></div>
            <div class="col-md-8"><h4>Additional Comments</h4></div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Criteria.Storage, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.RadioButtonFor(model => model.Criteria.Storage, true) Yes
                    @Html.RadioButtonFor(model => model.Criteria.Storage, false) No
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Criteria.StorageComment, new { @style = "width: 80%" })
                </div>
                @Html.ValidationMessageFor(model => model.Criteria.Storage)
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Criteria.Application, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.RadioButtonFor(model => model.Criteria.Application, true) Yes
                    @Html.RadioButtonFor(model => model.Criteria.Application, false) No
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Criteria.ApplicationComment, new { @style = "width: 80%" })
                </div>
                @Html.ValidationMessageFor(model => model.Criteria.Application)
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Criteria.Website, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.RadioButtonFor(model => model.Criteria.Website, true) Yes
                    @Html.RadioButtonFor(model => model.Criteria.Website, false) No
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Criteria.WebsiteComment, new { @style = "width: 80%" })
                </div>
                @Html.ValidationMessageFor(model => model.Criteria.Website)
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.Criteria.Mobile, new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.RadioButtonFor(model => model.Criteria.Mobile, true) Yes
                    @Html.RadioButtonFor(model => model.Criteria.Mobile, false) No
                </div>
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Criteria.MobileComment, new { @style = "width: 80%" })
                </div>
                @Html.ValidationMessageFor(model => model.Criteria.Mobile)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Cancel", "Details", new { id = Model.ProjectId }, new { @class = "btn btn-default" })
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
}