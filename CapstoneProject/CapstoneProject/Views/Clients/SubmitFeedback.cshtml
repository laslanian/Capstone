@model CapstoneProject.Feedback

@{
    ViewBag.Title = "SubmitFeedback";
}

<script>
    $(function () {
        $('.rateit').rateit();

        $('.rateit').bind('rated', function () {
            $("#Rating").val($(this).rateit('value'));
        });

        //$("img[name=rate]").mouseover(function () {
